.container
  - if current_user == @library_owner
    .row
      = render 'add_book'

  - if params[:search_query]
    .row
      = render 'book_results'

  .row
    %h2
      - if @library_owner.profile_picture
        = image_tag(@library_owner.profile_picture, class: "circular")
      #{@library_owner.name}'s Library
    = render 'borrowed_and_owned_books'